<?xml version="1.0"?>
  <!DOCTYPE hibernate-mapping PUBLIC
  "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
  "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >
 
  <hibernate-mapping> 
      <class name="com.fronde.harrisd.twitter.model.User" table="User" >
          <id name="id" type="int" column="id" >
                <generator class="native" />
          </id>
          <property name="screenName" type="java.lang.String" column="username" length="10" />
          <property name="email" type="java.lang.String" column="email" length="20" />
          <property name="firstName" type="java.lang.String" column="firstName" length="20" />
          <property name="lastName" type="java.lang.String" column="lastName" length="20" />
      </class>
 
  </hibernate-mapping>